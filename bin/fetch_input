#!/bin/bash

[[ -z "$AOC_SESSION" ]] && exit -1

OUTFILE="resources/puzzle_input_$(printf "%02d" "${1}").txt"

curl "https://adventofcode.com/2020/day/${1}/input"\
     --progress-bar\
     -H 'User-Agent: Mozilla/5.0 (X11; Linux x86_64; rv:85.0) Gecko/20100101 Firefox/85.0'\
     -H 'Accept: text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8'\
     -H 'Accept-Language: en-US,en;q=0.5'\
     --compressed\
     -H "Referer: https://adventofcode.com/2020/day/${1}"\
     -H 'Connection: keep-alive'\
     -H "Cookie: session=${AOC_SESSION}"\
     -H 'Upgrade-Insecure-Requests: 1'\
     -H 'Sec-Fetch-Dest: document'\
     -H 'Sec-Fetch-Mode: navigate'\
     -H 'Sec-Fetch-Site: same-origin'\
     -H 'DNT: 1'\
     -H 'Sec-GPC: 1'\
     -H 'Pragma: no-cache'\
     -H 'Cache-Control: no-cache'\
     -H 'TE: Trailers' > $OUTFILE
